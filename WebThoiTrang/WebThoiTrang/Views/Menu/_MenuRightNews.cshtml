@model IEnumerable<WebThoiTrang.Models.EF.ProductCategory>
<div class="col-md-4 col-lg-3 p-b-80">
    <div class="side-menu">
        <div class="bor17 of-hidden pos-relative">
            <input class="stext-103 cl2 plh4 size-116 p-l-28 p-r-55" type="text" name="search" placeholder="Search">

            <button class="flex-c-m size-122 ab-t-r fs-18 cl4 hov-cl1 trans-04">
                <i class="zmdi zmdi-search"></i>
            </button>
        </div>

        <div class="p-t-55">
            <h4 class="mtext-112 cl2 p-b-33">
                Categories
            </h4>

            <ul>
                @foreach (var item in Model)
                {
                    <li class="bor18">
                        <a href="/danh-muc-san-pham/@item.Alias-@(item.Id)" class="dis-block stext-115 cl6 hov-cl1 trans-04 p-tb-8 p-lr-4">
                            @item.Title
                        </a>
                    </li>
                }
            </ul>
        </div>

        @Html.Action("Partial_ProductFeature","Products")

    </div>
</div>
